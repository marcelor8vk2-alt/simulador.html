<script>
function calcular() {
  const conta = parseFloat(document.getElementById("conta").value);
  const tarifa = parseFloat(document.getElementById("tarifa").value);
  const irradiacao = parseFloat(document.getElementById("irradiacao").value);

  if (isNaN(conta) || isNaN(tarifa) || isNaN(irradiacao) || conta <= 0 || tarifa <= 0 || irradiacao <= 0) {
    alert("Por favor, preencha todos os campos corretamente!");
    return;
  }

  const consumoMensal = conta / tarifa;
  const eficiencia = 0.80;
  const potenciaIdeal = consumoMensal / (irradiacao * 30 * eficiencia);
  const custoSistema = potenciaIdeal * 5500;
  const geracaoMensal = potenciaIdeal * irradiacao * 30 * eficiencia;
  const economiaMensal = Math.min(geracaoMensal * tarifa, conta);
  const payback = custoSistema / (economiaMensal * 12);
  const economia25anos = economiaMensal * 12 * 25;
  const co2evitado = geracaoMensal * 0.084 * 12;

  let tipoSistema = "";
  if (potenciaIdeal < 2) tipoSistema = "Residencial Pequeno (apartamento ou casa simples)";
  else if (potenciaIdeal < 5) tipoSistema = "Residencial M√©dio (casa padr√£o)";
  else if (potenciaIdeal < 10) tipoSistema = "Residencial Grande ou Pequeno Com√©rcio";
  else tipoSistema = "Comercial / Industrial";

  const div = document.getElementById("resultado");
  div.innerHTML = `
    <h2>Resultados</h2>
    <p><b>Consumo mensal estimado:</b> ${consumoMensal.toFixed(2)} kWh</p>
    <p><b>Pot√™ncia ideal do sistema:</b> ${potenciaIdeal.toFixed(2)} kWp</p>
    <p><b>Custo estimado do sistema:</b> R$ ${custoSistema.toFixed(2)}</p>
    <p><b>Energia gerada por m√™s:</b> ${geracaoMensal.toFixed(2)} kWh</p>
    <p><b>Economia mensal estimada:</b> R$ ${economiaMensal.toFixed(2)}</p>
    <p><b>Retorno do investimento (payback):</b> ${payback.toFixed(2)} anos</p>
    <p><b>Economia total em 25 anos:</b> R$ ${economia25anos.toFixed(2)}</p>
    <p><b>CO‚ÇÇ evitado por ano:</b> ${co2evitado.toFixed(2)} kg</p>
    <p><b>Tipo de sistema recomendado:</b> ${tipoSistema}</p>
  `;

  const ctx = document.getElementById("grafico").getContext("2d");
  if (window.graficoExistente) window.graficoExistente.destroy();
  window.graficoExistente = new Chart(ctx, {
    type: "bar",
    data: {
      labels: ["Consumo (kWh)", "Gera√ß√£o (kWh)", "Economia Mensal (R$)", "Custo do Sistema (R$)"],
      datasets: [{
        label: "Resumo do Sistema",
        data: [consumoMensal, geracaoMensal, economiaMensal, custoSistema],
        backgroundColor: ["#ffb300", "#ff7043", "#81c784", "#64b5f6"]
      }]
    },
    options: {
      responsive: true,
      scales: {
        y: { beginAtZero: true }
      }
    }
  });
}
</script>

